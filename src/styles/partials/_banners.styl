.banner-green,
.banner-red,
.banner-yellow
  font-size: 0.8 rem
  max-width: 800px
  border-radius: 5px
  padding: 10px 15px
  margin-bottom: 10px

.banner-yellow
  background-color: $lightYellow

.banner-red
  background-color: $lightRed

.banner-green
  background-color: $lightGreen

p.banner-yellow > a
  color: $mediumYellow

p.banner-green > a
  color: $mediumGreen