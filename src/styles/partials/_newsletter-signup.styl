$subscribeHeight = 32px

.newsletter__container
  padding: 3rem 0
  
.newsletter__logo
  text-align: center

  h2
    font-weight:400
    font-size: 2.5rem
    letter-spacing: -2px
    text-transform: lowercase
    margin: 0
    line-height: 1.5

    & span 
      color: $primary

  > span
    font-weight: 300
    font-size: 0.9rem
    text-transform: lowercase
    color: $grey

.newsletter__subscribe-form
  position: relative
  max-width: 450px
  margin: 3rem auto 0
  padding-bottom: 2rem
  text-align: center

.newsletter__subscribe-form-inputs
  margin-bottom: 1.5rem
  display: flex


  @media (max-width: 499px) 
    flex-direction: column

.newsletter__subscribe-form-inputs--email
  height: $subscribeHeight
  color: $darkGrey
  border-radius: 24px
  margin-right: 12px
  flex-grow: 1
  padding: 0 20px
  border: 1px solid $grey
  font-size: 1rem

  &:focus
    outline: none 

  &::placeholder
    color: $grey
  

  @media (max-width: 499px) 
    margin-right: 0
    margin-bottom: 1rem

.newsletter__subscribe-form-inputs--submit
  background: $primary
  color: #ffffff
  text-shadow: 0 1px 3px rgba(36,180,126,.4)
  height: $subscribeHeight
  line-height: $subscribeHeight
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08)
  border: none
  border-radius: 24px
  font-size: 14px
  padding: 0 14px
  text-transform: uppercase
  letter-spacing: 0.025rem
  flex-shrink: 0
  transition: all 150ms ease
  
  &:hover
    cursor: pointer
    box-shadow: 0 7px 14px rgba(50,50,93,.1), 0 3px 6px rgba(0,0,0,.08)
    transform: translateY(-1px)

  &:focus
    outline: none 

.newsletter__buttondown-link,
.newsletter__learn-more
  position: absolute
  left: 0
  bottom: 8px
  right: 0
  color: $grey

.newsletter__buttondown-link
  font-size: 12px

.newsletter__learn-more
  font-size: 14px
