@import '../partials/_colors'
@import '../partials/_banners'
@import '../partials/_logo'

.post-list
  list-style: none
  margin: 0
  padding: 0
  background-color: green
  border: dashed red

ul.post-list li
  background-color: blue
  border: dashed purple

.post
  margin-bottom: 1.5rem
  
.post__title 
  margin-top: 0
  font-weight: 500

  a 
    color: $black
    text-decoration: none

.post__date
  color: $grey
  font-size: 0.8rem

div.news__headline img
  max-width: 40%
  max-height: 40%
  background-color: orange